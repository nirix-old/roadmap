<div class="issues content">
	<h2><%=t :issues %></h2>
	<table class="listing">
		<thead>
			<tr>
				<th></th>
				<th><%=t :summary %></th>
				<th><%=t :status %>
			</tr>
		</thead>
		<tbody>
		<% @issues.each do |i| %>
			<tr>
				<td><%= i.id %></td>
				<td><%= link_to i.summary, i.href %></td>
				<td></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>