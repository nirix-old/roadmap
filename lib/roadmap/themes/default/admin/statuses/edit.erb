<div class="admin edit status content">
	<h2 class="page-title"><%=t :edit_type %></h2>
	<form action="/admin/statuses/<%= @status.id %>/edit" method="post">
		<%=show_errors @status.errors %>
		<div class="form-horizontal box">
			<%=render_partial 'admin/statuses/form' %>
			<div class="actions">
				<%=submit_button t(:save), class: 'btn btn-success' %>
			</div>
		</div>
	</form>
</div>
