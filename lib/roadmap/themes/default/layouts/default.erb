<!DOCTYPE html>
<html>
	<head>
		<title><%= title.join ' - ' %></title>
		<%= css_link_tag 'assets/css/roadmap.css' %>
	</head>
	<body>
		<div id="header">
			<div class="container">
				<h1><%=link_to setting(:title), '/' %></h1>
				<div id="nav">
					<ul class="meta">
					<% if logged_in? %>
						<li><%=link_to t(:usercp), '/usercp' %></li>
						<li><%=link_to t(:logout), '/logout' %></li>
					<% else %>
						<li><%=link_to t(:login), '/login' %></li>
						<li><%=link_to t(:register), '/register' %></li>
					<% end %>
					</ul>
				</div>
			</div>
		</div>
		<div id="page">
			<div class="container">
				<%=yield%>
			</div>
		</div>
		<div id="footer">
			<div class="container">
				<%=t :copyright %>
			</div>
		</div>
	</body>
</html>
