<!doctype HTML>
<html lang="<%= LOCALE.info[:name_short] %>" dir="<%= LOCALE.info[:dir] %>">
	<head>
		<title><%= @title.reverse.join(' - ') %></title>
		<meta charset="utf-8">
		<%= css_link_tag '/assets/css/roadmap.css' %>
		<%= js_inc_tag '/assets/js/roadmap.js' %>
	</head>
	<body>
		<header id="header">
			<div class="page_width">
				<h1><%= link_to setting(:title), '/' %><% if current_project %> / <%= link_to current_project.name, current_project.href %><% end %></h1>
				<nav id="nav">
					<ul>
					<% if current_project %>
						<li><%= link_to L(:issues), current_project.href('/issues') %></li>
						<li><%= link_to L(:roadmap), current_project.href('/roadmap') %></li>
						<li><%= link_to L(:timeline), '#' %></li>
					<% else %>
						<li><%= link_to L(:projects), '/' %></li>
						<li><%= link_to L(:activity), '/activity' %></li>
					<% end %>
					</ul>
				</nav>
			</div>
		</header>
		<div id="page">
			<div class="page_width">
				<%= yield %>
			</div>
		</div>
		<footer id="footer">
			<%= L(:copyright) %>
		</footer>
	</body>
</html>