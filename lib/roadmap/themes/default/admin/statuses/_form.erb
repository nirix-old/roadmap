<div class="control-group">
	<%=label t(:name), for: [:status, :name], class: 'control-label' %>
	<div class="controls">
		<%=text_field [:status, :name], value: @status.name, class: 'span9' %>
	</div>
</div>
<div class="control-group">
	<%=label t(:is_open), for: [:status, :is_open], class: 'control-label' %>
	<div class="controls">
		<%=checkbox [:status, :is_open], value: 1, checked: @status.is_open %>
		<div class="help-inline"><abbr class="tooltipped" data-toggle="tooltip"  title="<%=t 'help.status_is_open' %>">?</abbr></div>
	</div>
</div>
